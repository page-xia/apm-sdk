{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ES6",
    "declaration": true,
    "removeComments": true,
    "outDir": "./dist/",
    "strict": true,
    "sourceMap": false,
    "noImplicitAny": false,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "experimentalDecorators":true,
    "lib": ["esnext", "dom"],
    "resolveJsonModule": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}